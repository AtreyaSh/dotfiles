# Pulse Audio controls
# increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master unmute && amixer -q sset Master 5%+ && pkill -RTMIN+10 i3blocks
# decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master unmute && amixer -q sset Master 5%- && pkill -RTMIN+10 i3blocks
# mute audio
bindsym XF86AudioMute exec --no-startup-id amixer -q sset Master toggle && pkill -RTMIN+10 i3blocks

# Screen brightness controls
# increase screen brightness
bindsym XF86MonBrightnessUp exec light -A 10
# decrease screen brightness
bindsym XF86MonBrightnessDown exec light -U 10

# Touchpad controls
# toggle touchpad
bindsym XF86TouchpadToggle exec ~/.config/i3/scripts/toggletouchpad.sh

# Turn on wifi signal
bindsym $mod+Shift+W exec ~/.config/i3/scripts/toggleRadio.sh

